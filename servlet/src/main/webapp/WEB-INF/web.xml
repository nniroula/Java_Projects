<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" version="6.0">
  <display-name>ServletLoginForm</display-name>
	
	<servlet>
		<servlet-name>Add</servlet-name>
		<servlet-class>com.pc.AddTwoNumbers</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Add</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	
	
	<!-- 2nd Servlet -->
	
	<servlet>
		<servlet-name>signupForm</servlet-name>
		<servlet-class>com.pc.SignupServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>signupForm</servlet-name>
		<url-pattern>/signingup</url-pattern>
	</servlet-mapping>
	
	<!-- postMethod.html file -->
	<servlet>
		<servlet-name>PostMethod</servlet-name>
		<servlet-class>com.pc.PostAndGetServletMethods</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PostMethod</servlet-name>
		<url-pattern>/posting</url-pattern>
	</servlet-mapping>
</web-app>